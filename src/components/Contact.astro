<section class="w-2/4 m-auto mt-20">
    <h2 class="text-gray-300 font-bold text-3xl">Contact</h2>
    <div class="mt-10">
        <form action="" class="flex flex-col ">
            <div class="flex w-full gap-5">
                <div class="w-2/4">
                    <label class="block text-xl font-semibold" for="name">Name</label>
                    <input  class="w-full p-4 mt-2 bg-gray-700 opacity-80 outline-none" type="text" placeholder="Ej: Mike" id="name">
                </div>
                <div class="w-2/4">
                    <label class="block text-xl font-semibold" for="surname">Surname</label>
                    <input  class="w-full p-4 mt-2 bg-gray-700 opacity-80 outline-none" type="text" placeholder="Ej: Fox" id="surname">
                </div>
            </div>
            <div class="flex w-full gap-5 mt-4">
                <div class="w-2/4">
                    <label class="block text-xl font-semibold" for="email">Email</label>
                    <input class="w-full p-4 mt-2 bg-gray-700 opacity-80 outline-none" type="email" placeholder="Ej: mike.fox@gmail.com">
                </div>
                <div class="w-2/4">
                    <label class="block text-xl font-semibold" for="number">Phone number</label>
                    <input class="w-full p-4 mt-2 bg-gray-700 opacity-80 outline-none" type="number" placeholder="385 657 89 06">
                </div>
            </div>
            <div>
                <label class="block text-xl font-semibold" for="mensaje">Mensaje</label>
                <textarea class="w-full p-4 mt-2 bg-gray-700 opacity-80 outline-none" name="mensaje" id="mensaje" placeholder="Ej: I need one website "></textarea>
            </div>

            <button type="submit" class="text-center bg-purple-900 w-2/5 py-4 mt-4 font-bold text-xl rounded-md hover:bg-purple-800">Send</button>
        </form>
    </div>
</section>